#
# Configuration for Nextcloud using NGINX WebProxy
#

# Containers name
DB_CONTAINER_NAME=mariadb-nextcloud
APP_CONTAINER_NAME=nextcloud
APP_IMAGE_TAG=fpm

# Mysql settings
MYSQL_HOST=mariadb-nextcloud
MYSQL_DATABASE=nextcloud
MYSQL_ROOT_PASSWORD=secret
MYSQL_USER=nextcloud
