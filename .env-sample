# Nextcloud settings
NGINX_CONTAINER_NAME=nginx-nextcloud
NEXTCLOUD_ADMIN_USER=admin
NEXTCLOUD_ADMIN_PASSWORD=secret

# Nextcloud data path
NEXTCLOUD_DATA_DIR=./nextcloud/data
